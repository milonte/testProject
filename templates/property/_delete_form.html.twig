<form method="post" action="{{ path('property_delete', {'id': property.id}) }}" onsubmit="return confirm('Êtes vous sûr de vouloir supprimer ce bien ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ property.id) }}">
    <button class="btn btn-link"><i class="fas fa-times"></i> Supprimer</button>
</form>
